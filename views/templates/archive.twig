{% extends 'layouts/base.twig' %}

{% block content %}

  <article id="post-{{ post.id }}">

    <header>
      <h1>{{ function('the_archive_title') }}</h1>
    </header>

    {% for post in posts %}
      {% include ['components/article-'~post.post_type~'.twig', 'components/article.twig'] %}
    {% endfor %}

  </article>

{% endblock %}
